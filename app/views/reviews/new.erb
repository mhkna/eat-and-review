<%= erb :'_errors' %>

<form id="new-review" action="/restaurants/<%= @restaurant.id %>/reviews" method="post">
  <div>
    <label for="rating">Rating:</label>
    <br>
    <select name="rating" id="rating-option-list">
      <option disabled selected value>select</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>
  <div>
    <label for="username">Review:</label>
    <br>
    <textarea name="description" rows="6" cols="27" form="new-review"></textarea>
  </div>
  <div>
    <input type="submit" value="Save Review">
  </div>
</form>
